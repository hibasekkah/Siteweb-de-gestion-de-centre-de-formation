@{
    ViewData["Title"] = "Confirmation d'inscription";
    Layout = "_Layout";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Registration Successful!</h1>
    <p class="lead">You have successfully registered for the training.</p>

    <div class="alert alert-success mt-4" role="alert">
        <h4 class="alert-heading">Registration Details</h4>
        <p>Congratulations, you are now enrolled in our training program! We will send you more details soon.</p>
        <hr>
        <p class="mb-0">Training: <strong>@ViewBag.IntituleFormation</strong></p>
        <p>Registration Status: <strong>Pending Payment</strong></p>
    </div>
</div>
