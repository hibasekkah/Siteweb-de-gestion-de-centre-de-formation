@using Microsoft.AspNetCore.Identity
@using GestForma.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-toggle="dropdown">
                <i class="fa-solid fa-user"></i>
            </a>
            <ul class="dropdown-menu">
              
                    <li>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                            Profile
                        </a>
                    </li>
                
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">
                        Logout
                    </a>
                </li>
            </ul>
        </li>
    }

else
    {

      
        <li class="nav-item">
            <a class="btn btn-primary my-4 px-4 d-none d-lg-block" id="register" asp-area="Identity" asp-page="/Account/Register">
                Join Us
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">
                Login
            </a>
        </li>

}
</ul>
